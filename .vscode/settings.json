{
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
  },
  "black-formatter.args": [
    "--line-length",
    "120"
  ],
  "isort.args": [
    "--profile",
    "black",
    "--line-length",
    "120",
  ],
}