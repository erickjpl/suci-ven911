{
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
  },
  "black-formatter.args": [
    "--line-length",
    "120",
  ],
  "isort.args": [
    "--profile",
    "black",
    "--line-length",
    "120",
    "--src-path",
    "src,tests",
    "--project",
    "django",
    "--known-local-folder",
    "templates,gestion_comunicacional"
  ],
  "autoflake-extension.remove-duplicate-keys": true,
  "autoflake-extension.remove-unused-variables": true,
  "autoflake-extension.extension.useIntegratedTerminal": false,
  "[django-html]": {
    "editor.defaultFormatter": "junstyle.vscode-django-support"
  },
}